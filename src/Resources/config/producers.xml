<?xml version="1.0" encoding="UTF-8" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services
        https://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service class="Sts\KafkaBundle\Client\Producer\ProducerHandlerProvider" id="sts_kafka.client.producer.producer_handler_provider"/>
        <service id="Sts\KafkaBundle\Client\Producer\ProducerHandlerProvider" alias="sts_kafka.client.producer.producer_handler_provider"/>
        <service class="Sts\KafkaBundle\Client\Producer\ProducerBus" id="sts_kafka.client.producer_bus">
            <argument type="service" id="sts_kafka.client.producer.producer_handler_provider"/>
            <argument type="service" id="sts_kafka.client.producer.producer_bus_cache"/>
        </service>
        <service id="Sts\KafkaBundle\Client\Producer\ProducerBus" alias="sts_kafka.client.producer_bus"/>
        <service class="Sts\KafkaBundle\Client\Producer\ProducerBusCache" id="sts_kafka.client.producer.producer_bus_cache">
            <argument type="service" id="sts_kafka.rd_kafka.factory.global_configuration_factory"/>
            <argument type="service" id="sts_kafka.configuration.configuration_resolver"/>
        </service>
        <service id="Sts\KafkaBundle\Client\Producer\ProducerBusCache" alias="sts_kafka.client.producer.producer_bus_cache"/>
    </services>
</container>
