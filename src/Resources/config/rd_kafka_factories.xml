<?xml version="1.0" encoding="UTF-8" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services
        https://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service class="Sts\KafkaBundle\RdKafka\Factory\TopicConfigurationFactory"
                 id="sts_kafka.rd_kafka.factory.topic_configuration_factory" shared="false"/>
        <service id="Sts\KafkaBundle\RdKafka\Factory\TopicConfigurationFactory"
                 alias="sts_kafka.rd_kafka.factory.topic_configuration_factory"/>
        <service class="Sts\KafkaBundle\RdKafka\Factory\GlobalConfigurationFactory"
                 id="sts_kafka.rd_kafka.factory.global_configuration_factory" shared="false"/>
        <service id="Sts\KafkaBundle\RdKafka\Factory\GlobalConfigurationFactory"
                 alias="sts_kafka.rd_kafka.factory.global_configuration_factory"/>
        <service class="Sts\KafkaBundle\RdKafka\Factory\ConsumerQueueBuilder"
                 id="sts_kafka.rd_kafka.factory.consumer_queue_builder" shared="false">
            <argument type="service" id="sts_kafka.rd_kafka.factory.global_configuration_factory"/>
            <argument type="service" id="sts_kafka.rd_kafka.factory.topic_configuration_factory"/>
        </service>
        <service id="Sts\KafkaBundle\RdKafka\Factory\ConsumerQueueBuilder"
                 alias="sts_kafka.rd_kafka.factory.consumer_queue_builder"/>
    </services>
</container>
